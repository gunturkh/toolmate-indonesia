---
interface Props {
  slug: string;
  image: string;
  badge: string;
  badgeColor: string;
  title: string;
  subtitle: string;
  description: string;
  category: string;
  showViewDetails?: boolean;
}

const { slug, image, badge, badgeColor, title, subtitle, description, category, showViewDetails = true } = Astro.props;
---

<a
  href={`/projects/${slug}`}
  data-category={category}
  class="project-card bg-white rounded-lg shadow-lg overflow-hidden border border-slate-100 hover:-translate-y-1 transition duration-300 block group"
>
  <div class="h-64 bg-slate-200 relative overflow-hidden">
    <img
      src={image}
      alt={title}
      width="400"
      height="256"
      class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
      loading="lazy"
      decoding="async"
    />
    <div class="absolute top-4 left-4 bg-slate-700 text-white text-xs font-bold px-3 py-1 rounded">
      {badge}
    </div>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold text-brand-navy group-hover:text-brand-gold transition">{title}</h3>
    <p class="text-sm text-brand-gold font-bold uppercase mb-2">{subtitle}</p>
    <p class="text-slate-600 text-sm">{description}</p>
    {showViewDetails && (
      <span class="inline-flex items-center text-brand-navy font-semibold text-sm mt-4 group-hover:text-brand-gold transition">
        View Details <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition"></i>
      </span>
    )}
  </div>
</a>
