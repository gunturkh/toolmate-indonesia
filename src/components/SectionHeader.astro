---
interface Props {
  label?: string;
  labelColor?: string;
  title: string;
  titleColor?: string;
  subtitle?: string;
  subtitleColor?: string;
  centered?: boolean;
}

const {
  label,
  labelColor = "text-brand-navy",
  title,
  titleColor = "text-slate-900",
  subtitle,
  subtitleColor = "text-slate-500",
  centered = false
} = Astro.props;
---

<div class:list={[{ "text-center max-w-3xl mx-auto": centered }]}>
  {label && (
    <h2 class={`${labelColor} font-bold uppercase tracking-widest text-sm mb-2`}>{label}</h2>
  )}
  <h3 class={`text-3xl font-bold ${titleColor}`}>{title}</h3>
  {subtitle && (
    <p class={`${subtitleColor} mt-2`}>{subtitle}</p>
  )}
</div>
