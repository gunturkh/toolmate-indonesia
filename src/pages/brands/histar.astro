---
import BaseLayout from '@layouts/BaseLayout.astro';

const productCategories = [
  {
    name: 'LED Bulbs',
    products: [
      { name: 'A-Bulb', spec: '3W - 24W | E27' },
      { name: 'T-Bulb', spec: '10W - 60W | E27' },
      { name: 'P-Bulb', spec: '9W - 15W | E27' },
      { name: 'MR16', spec: '5W - 7W | GU5.3' },
    ]
  },
  {
    name: 'Downlights & Spotlights',
    products: [
      { name: 'DL1002 Panel', spec: '6W - 24W | Ø70-200mm' },
      { name: 'SL2117 Spot', spec: '7W - 15W | Adjustable' },
    ]
  },
  {
    name: 'LED Strip & Driver',
    products: [
      { name: 'Strip PVC', spec: '5W - 14.4W/m | 220V' },
      { name: 'Strip DC', spec: '4.8W - 14.4W/m | 12/24V' },
      { name: 'LED Driver', spec: '12W - 360W | 12/24V' },
    ]
  },
  {
    name: 'Linear Lighting',
    products: [
      { name: 'Batten BH40', spec: '40W | 1200mm' },
      { name: 'Batten BH60', spec: '60W | 1200mm' },
      { name: 'Batten BH80', spec: '80W | 1500mm' },
      { name: 'T8H Tube', spec: '9W - 22W | G13' },
    ]
  },
  {
    name: 'Outdoor Lighting',
    products: [
      { name: 'FL2024 Flood', spec: '10W - 200W | IP65' },
      { name: 'SL200N Solar', spec: '60W - 200W | All-in-One' },
      { name: 'SL200S Solar', spec: '30W - 100W | Split Type' },
      { name: 'HB100N Highbay', spec: '100W | Industrial' },
      { name: 'HB200N Highbay', spec: '200W | Industrial' },
    ]
  },
  {
    name: 'LED Display',
    products: [
      { name: 'Indoor Display', spec: 'P2.5 - P4 | 800-1200 nits' },
      { name: 'Outdoor Display', spec: 'P4 - P10 | IP65' },
    ]
  },
  {
    name: 'Electrical - BRIGHT Series',
    products: [
      { name: 'Wall Switch', spec: '1-3 Gang | 1/2 Way' },
      { name: 'Power Socket', spec: 'Universal | 16A' },
      { name: 'Dimmer', spec: 'Up to 400W | LED Compatible' },
    ]
  },
];
---

<BaseLayout
  title="HiSTAR LED Lighting - SNI Certified"
  description="HiSTAR LED lighting products by PT. Fullmoon Jaya Abadi. SNI certified LED bulbs, downlights, floodlights, solar street lights. Official distributor in Batam."
  keywords={['HiSTAR LED', 'HiSTAR Indonesia', 'SNI LED bulbs', 'LED lighting Batam', 'solar street light', 'LED floodlight', 'affordable LED']}
  activePage="brands"
  flexLayout={true}
>
  <!-- Header -->
  <div class="bg-white pt-28 pb-12 border-b border-slate-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="flex items-center gap-6">
          <img src="/images/logo/histar.jpeg" alt="HiSTAR" class="h-16 md:h-20 object-contain" />
          <div>
            <p class="text-sm text-slate-500 mb-1">by PT. Fullmoon Jaya Abadi</p>
            <h1 class="text-2xl md:text-3xl font-bold text-slate-800">HiSTAR</h1>
            <p class="text-sm text-amber-600 font-medium mt-1">Future Always Bright</p>
          </div>
        </div>
        <div class="flex flex-wrap items-center gap-2">
          <span class="px-2 py-1 text-xs font-medium text-amber-700 bg-amber-50 rounded border border-amber-200">SNI Certified</span>
          <span class="px-2 py-1 text-xs font-medium text-slate-600 bg-slate-100 rounded">Warranty</span>
          <span class="px-2 py-1 text-xs font-medium text-green-700 bg-green-50 rounded border border-green-200">Go Green</span>
          <a
            href="https://drive.google.com/file/d/1XaiKno_JfeKd6GpKE8zWtHMMQAlTNfr3/view"
            target="_blank"
            rel="noopener"
            class="px-3 py-1.5 text-xs font-medium text-amber-700 bg-amber-50 border border-amber-200 rounded hover:bg-amber-100 transition"
          >
            Download Catalogue
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Products -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    {productCategories.map((category) => (
      <div class="mb-10">
        <h2 class="text-lg font-semibold text-slate-700 mb-4 pb-2 border-b border-slate-200">
          {category.name}
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
          {category.products.map((product) => (
            <div class="bg-slate-50 border border-slate-200 rounded-lg p-4 hover:border-amber-300 transition">
              <p class="text-sm font-medium text-slate-800 mb-1">{product.name}</p>
              <p class="text-xs text-slate-500">{product.spec}</p>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>

  <!-- Manufacturer Info -->
  <div class="bg-amber-50 border-y border-amber-100 py-10">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div>
          <h3 class="text-lg font-semibold text-slate-800 mb-2">Manufacturer</h3>
          <p class="text-slate-600 text-sm">PT. Fullmoon Jaya Abadi</p>
          <p class="text-slate-500 text-sm">Landmark Pluit Tower B9 Lt. 10, Jakarta</p>
          <p class="text-slate-500 text-sm">+6221 2267 3700 · fullmoonid.com</p>
        </div>
        <div class="flex items-center gap-3 text-center">
          <div class="bg-white border border-amber-200 rounded-lg px-6 py-4">
            <p class="text-2xl font-bold text-amber-600">SNI</p>
            <p class="text-xs text-slate-500">Certified</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact -->
  <div class="bg-slate-800 py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div>
          <h2 class="text-xl font-semibold text-white mb-2">Get HiSTAR products</h2>
          <p class="text-slate-400">Competitive pricing for wholesale and project orders.</p>
        </div>
        <div class="flex gap-3">
          <a href="/#contact" class="px-5 py-2.5 bg-amber-500 text-white font-medium rounded hover:bg-amber-600 transition">
            Request Quote
          </a>
          <a href="tel:+6281111128383" class="px-5 py-2.5 border border-slate-600 text-slate-300 font-medium rounded hover:border-slate-500 hover:text-white transition">
            Call Us
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <div class="bg-white py-6 border-t border-slate-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 flex justify-between items-center">
      <a href="/brands/megaman" class="text-sm text-slate-600 hover:text-slate-800 transition">
        ← Megaman
      </a>
      <a href="/brands/prisled" class="text-sm text-slate-600 hover:text-slate-800 transition">
        Prisled →
      </a>
    </div>
  </div>
</BaseLayout>
