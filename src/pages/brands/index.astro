---
import BaseLayout from '@layouts/BaseLayout.astro';

const brands = [
  {
    name: 'Prisled',
    slug: 'prisled',
    logo: '/images/logo/prisled.png',
    tagline: 'Commercial & Industrial LED',
    description: 'Modern LED solutions for offices, retail, warehouses, and outdoor applications.',
  }
];
---

<BaseLayout
  title="LED Lighting Brands"
  description="Official distributor for Prisled LED lighting brand in Batam. Premium LED bulbs, downlights, panels, floodlights and industrial lighting."
  keywords={['LED lighting Batam', 'Prisled', 'lighting distributor', 'LED bulbs', 'industrial lighting']}
  activePage="brands"
  flexLayout={true}
>
  <!-- Header -->
  <div class="bg-white pt-28 pb-12 border-b border-slate-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <h1 class="text-2xl md:text-3xl font-bold text-slate-800 mb-2">LED Lighting Brands</h1>
      <p class="text-slate-600">Official distributor in Batam and Riau Islands</p>
    </div>
  </div>

  <!-- Featured Brand -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-12">
    <a href="/brands/prisled" class="group block">
      <div class="bg-white border border-slate-200 rounded-xl p-8 md:p-12 hover:border-brand-navy hover:shadow-lg transition">
        <div class="flex flex-col md:flex-row items-center gap-8">
          <div class="w-full md:w-1/3 flex justify-center">
            <img
              src="/images/logo/prisled.png"
              alt="Prisled"
              class="h-24 md:h-32 object-contain"
              loading="eager"
            />
          </div>
          <div class="w-full md:w-2/3 text-center md:text-left">
            <h2 class="text-2xl md:text-3xl font-bold text-slate-800 mb-2">Prisled</h2>
            <p class="text-brand-gold font-semibold mb-4">Commercial & Industrial LED</p>
            <p class="text-slate-600 mb-6">Modern LED lighting solutions for offices, retail spaces, warehouses, and outdoor applications. Premium quality with competitive pricing for all your lighting needs.</p>
            <span class="inline-flex items-center text-brand-navy font-semibold group-hover:underline transition">
              View products & catalog
              <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition"></i>
            </span>
          </div>
        </div>
      </div>
    </a>
  </div>

  <!-- Why Us -->
  <div class="bg-slate-50 border-y border-slate-200 py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <h2 class="text-lg font-semibold text-slate-800 mb-6">Why choose us</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div>
          <p class="font-medium text-slate-800 mb-1">Genuine Products</p>
          <p class="text-sm text-slate-500">100% authentic with manufacturer warranty</p>
        </div>
        <div>
          <p class="font-medium text-slate-800 mb-1">Competitive Pricing</p>
          <p class="text-sm text-slate-500">Best rates for wholesale orders</p>
        </div>
        <div>
          <p class="font-medium text-slate-800 mb-1">Fast Delivery</p>
          <p class="text-sm text-slate-500">Quick shipping across Batam</p>
        </div>
        <div>
          <p class="font-medium text-slate-800 mb-1">Technical Support</p>
          <p class="text-sm text-slate-500">Expert consultation available</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact -->
  <div class="bg-slate-800 py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div>
          <h2 class="text-xl font-semibold text-white mb-2">Need a quote?</h2>
          <p class="text-slate-400">Contact us for bulk orders, project pricing, or technical specs.</p>
        </div>
        <a href="/#contact" class="px-5 py-2.5 bg-white text-slate-800 font-medium rounded hover:bg-slate-100 transition">
          Contact Us
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
