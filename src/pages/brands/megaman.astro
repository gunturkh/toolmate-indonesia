---

<BaseLayout
  title="Megaman LED Lighting - German Quality"
  description="Megaman LED lighting products - German brand since 1994. Premium LED bulbs, downlights, panels, floodlights and more. Official distributor in Batam, Indonesia."
  keywords={['Megaman LED', 'Megaman Indonesia', 'German LED brand', 'LED bulbs Batam', 'Megaman downlight', 'LED panel', 'industrial lighting']}
  activePage="brands"
  flexLayout={true}
>
  <!-- Header -->
  <div class="bg-white pt-28 pb-12 border-b border-slate-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="flex items-center gap-6">
          <img src="/images/logo/megaman.jpeg" alt="Megaman" class="h-16 md:h-20 object-contain" />
          <div>
            <p class="text-sm text-slate-500 mb-1">German LED Brand since 1994</p>
            <h1 class="text-2xl md:text-3xl font-bold text-slate-800">Megaman</h1>
          </div>
        </div>
        <div class="flex flex-wrap items-center gap-3">
          {['CE', 'CB', 'SNI', 'ISO'].map((cert) => (
            <span class="px-2 py-1 text-xs font-medium text-slate-600 bg-slate-100 rounded">{cert}</span>
          ))}
          <a
            href="https://drive.google.com/file/d/1xo9IqeCwELVNj7oqsFQAkRei7M9CkcCd/view"
            target="_blank"
            rel="noopener"
            class="px-3 py-1.5 text-xs font-medium text-blue-700 bg-blue-50 border border-blue-200 rounded hover:bg-blue-100 transition"
          >
            Download Catalogue
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="bg-slate-50 py-6 border-b border-slate-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex flex-wrap justify-center md:justify-start gap-8 text-center md:text-left">
        <div>
          <p class="text-2xl font-bold text-slate-800">31+</p>
          <p class="text-sm text-slate-500">Years Experience</p>
        </div>
        <div class="hidden md:block w-px bg-slate-300"></div>
        <div>
          <p class="text-2xl font-bold text-slate-800">52+</p>
          <p class="text-sm text-slate-500">Countries</p>
        </div>
        <div class="hidden md:block w-px bg-slate-300"></div>
        <div>
          <p class="text-2xl font-bold text-slate-800">140</p>
          <p class="text-sm text-slate-500">lm/W Efficiency</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Products -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    {productCategories.map((category) => (
      <div class="mb-12">
        <h2 class="text-lg font-semibold text-slate-700 mb-4 pb-2 border-b border-slate-200">
          {category.name}
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
          {category.products.map((product) => (
            <div class="group">
              <div class="aspect-square bg-white border border-slate-200 rounded-lg p-3 mb-2 flex items-center justify-center group-hover:border-slate-300 transition">
                <img
                  src={product.image}
                  alt={product.name}
                  class="max-h-full max-w-full object-contain"
                  loading="lazy"
                />
              </div>
              <p class="text-sm font-medium text-slate-800">{product.name}</p>
              <p class="text-xs text-slate-500">{product.spec}</p>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>

  <!-- Portfolio -->
  <div class="bg-slate-50 border-y border-slate-200 py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <h2 class="text-lg font-semibold text-slate-700 mb-6">Project Portfolio</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {portfolioImages.map((item) => (
          <div class="group relative overflow-hidden rounded-lg aspect-[4/3]">
            <img
              src={item.image}
              alt={`${item.category} lighting project`}
              class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition">
              <span class="absolute bottom-3 left-3 text-white text-sm font-medium">{item.category}</span>
            </div>
          </div>
        ))}
      </div>
      <p class="text-sm text-slate-500 mt-4">Megaman lighting solutions installed in commercial, hospitality, and retail spaces worldwide.</p>
    </div>
  </div>

  <!-- Contact -->
  <div class="bg-slate-800 py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div>
          <h2 class="text-xl font-semibold text-white mb-2">Need pricing or specifications?</h2>
          <p class="text-slate-400">Contact us for quotes, bulk orders, or technical support.</p>
        </div>
        <div class="flex gap-3">
          <a href="/#contact" class="px-5 py-2.5 bg-white text-slate-800 font-medium rounded hover:bg-slate-100 transition">
            Request Quote
          </a>
          <a href="https://www.megaman-ap.com" target="_blank" rel="noopener" class="px-5 py-2.5 border border-slate-600 text-slate-300 font-medium rounded hover:border-slate-500 hover:text-white transition">
            Official Site
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <div class="bg-white py-6 border-t border-slate-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 flex justify-between items-center">
      <a href="/brands" class="text-sm text-slate-600 hover:text-slate-800 transition">
        ← All Brands
      </a>
      <a href="/brands/histar" class="text-sm text-slate-600 hover:text-slate-800 transition">
        HiSTAR →
      </a>
    </div>
  </div>
</BaseLayout>
