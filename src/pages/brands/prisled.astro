  </div>

  <!-- Products Section -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-16">
    <div class="text-center mb-12">
      <h2 class="text-2xl md:text-3xl font-bold text-slate-800 mb-3">Our Products</h2>
      <p class="text-slate-600">Download product brochures for detailed specifications</p>
    </div>

    {products.map((category) => (
      <div class="mb-12">
        <h3 class="text-lg font-bold text-slate-700 mb-6 pb-3 border-b-2 border-purple-200 flex items-center">
          <i class="fas fa-lightbulb text-purple-500 mr-3"></i>
          {category.category}
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {category.items.map((product) => (
            <div class="bg-white border border-slate-200 rounded-xl p-6 hover:border-purple-300 hover:shadow-lg transition group">
