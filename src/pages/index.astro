---
import { Image } from 'astro:assets';
import BaseLayout from '@layouts/BaseLayout.astro';
import ProjectCard from '@components/ProjectCard.astro';
import DownloadCard from '@components/DownloadCard.astro';
import { getCollection } from 'astro:content';
import { pageSEO } from '@data/seo';
import { downloads as downloadsData } from '@data/downloads';

const projectsData = await getCollection('projects');
const projects = projectsData.map(p => p.data);

const whyChooseUs = [
  { icon: "fa-building", bg: "bg-brand-navy/10", color: "text-brand-navy", text: "Integrated one-stop solution center; from concept to supply" },
  { icon: "fa-medal", bg: "bg-brand-gold/10", color: "text-brand-gold", text: "Quality, cost and delivery excellence are \"given\"" },
  { icon: "fa-users", bg: "bg-green-100", color: "text-green-600", text: "Flexible, responsive, personalized and market oriented" },
  { icon: "fa-clock", bg: "bg-blue-100", color: "text-blue-600", text: "Time competitive with short development cycle" },
  { icon: "fa-globe", bg: "bg-purple-100", color: "text-purple-600", text: "Global thinking; local execution" }
];

const services = [
  {
    icon: "fa-wind",
    iconBg: "bg-blue-50",
    iconColor: "text-brand-navy",
    borderColor: "border-brand-navy",
    title: "MVAC & Ducting",
    description: "Complete Mechanical Ventilation & Air Conditioning systems. Specializing in exhaust duct systems, cooling tower setup/servicing, and clean room systems (SUS/Iron)."
  },
  {
    icon: "fa-water",
    iconBg: "bg-green-50",
    iconColor: "text-green-600",
    borderColor: "border-green-500",
    title: "Water Treatment (WWTP)",
    description: "Design and expansion of WWTP, STP, and WTP. We utilize advanced systems like MBR (Membrane Bioreactor) and MBBR. Includes pipe installation and chemical supply."
  },
  {
    icon: "fa-hard-hat",
    iconBg: "bg-yellow-50",
    iconColor: "text-brand-gold",
    borderColor: "border-brand-gold",
    title: "General Contractor",
    description: "Civil works, renovation, equipment fabrication, epoxy flooring painting (e.g., Caterpillar facility), and air compressor/dryer setup."
  }
];

const benefits = [
  "Reduces BOD, COD, TSS and Sludge volume",
  "Instantly eliminates bad odor (Ammonia/H2S)",
  "Restores ecological balance in wastewater ponds",
  "Reduces energy cost (efficiency in sewage treatment)"
];

const dosageData = [
  { app: "Sewage Treatment (STP)", system: "Debit/Flow", standard: "0.5 ppm / day", initial: "5 ppm (Days 1-5)" },
  { app: "Industrial Waste (WWTP)", system: "100 m³/day", standard: "1 ppm / day", initial: "10 ppm (Day 1)" },
  { app: "Grease Trap", system: "5 m³/day", standard: "5 ppm / day", initial: "50 ppm (Day 1)" }
];

const provenResults = [
  {
    beforeImg: "https://images.unsplash.com/photo-1504307651254-35680f356dfd?auto=format&fit=crop&w=400&q=80",
    afterImg: "https://images.unsplash.com/photo-1532601224476-15c79f2f7a51?auto=format&fit=crop&w=400&q=80",
    title: "McDonald's Grease Trap (Restaurant)",
    description: "Application on 4 grease trap tanks with 8m³ total capacity. No skimming during trial. Reduced oil/grease and destroyed clumped sludge within 5 days treatment (50 gram/day dosage)."
  },
  {
    beforeImg: "https://images.unsplash.com/photo-1581092335397-9583eb92d232?auto=format&fit=crop&w=400&q=80",
    afterImg: "https://images.unsplash.com/photo-1468421870903-4df1664ac249?auto=format&fit=crop&w=400&q=80",
    title: "Teh Botol Sosro (Tea Factory WWTP)",
    description: "Significant COD, BOD, TSS and sludge volume reduction. Water color changed from black to brownish within 16 days of treatment."
  },
  {
    beforeImg: "https://images.unsplash.com/photo-1581092918056-0c4c3acd3789?auto=format&fit=crop&w=400&q=80",
    afterImg: "https://images.unsplash.com/photo-1416879595882-3373a0480b5b?auto=format&fit=crop&w=400&q=80",
    title: "Mayora (Food Factory WWTP)",
    description: "50% sludge reduction before and after treatment. Odor almost eliminated. Water changed from black to brownish. Chemical usage (coagulant & flocculant) reduced by up to 30%."
  }
];

const clients = [
  "HANGGAR LION AIR (PT. BATAM TEKNIK)",
  "PT. CATERPILLAR INDONESIA BATAM",
  "PT. HO WAH GENTING",
  "PT. PANASONIC SINGAPORE",
  "PT. RAPALA VMC BATAM",
  "PT. STX PRECISION BATAM",
  "PT. EXCELITAS TECHNOLOGIES INDONESIA",
  "PT. TRI MANDIRI INVESTINDO",
  "HARBOUR BAY AMIR HOTEL",
  "PT. JMS BATAM",
  "NIRWANA GARDEN RESORT",
  "PT. BRILIANT PRECISION BATAM",
  "PT. TECHWAH BATAM",
  "PT. SANMINA SCI",
  "PT. YOKOGAWA MANUFACTURING BATAM",
  "PT. SINCOM PANASONIC",
  "PT. VMC FINISHING TACKLE INDONESIA",
  "PT. MEDCO NUSANTARA",
  "PT. CHEVRON PACIFIC INDONESIA",
  "J RAY MC DERMOTT",
  "PT. ELNUSA GEOSAINS"
];


// Downloads for the landing page - using centralized data
const downloads = [
  {
    icon: "fa-file-pdf",
    iconColor: "text-red-500",
    title: "Company Profile",
    subtitle: "PDF Document",
    link: downloadsData.companyProfile.url,
    borderColor: "border-slate-200",
    buttonBg: "bg-brand-navy",
    titleColor: "text-brand-navy"
  },
  {
    icon: "fa-file-alt",
    iconColor: "text-green-600",
    title: "Biology Genesis Brochure",
    subtitle: "Product Information",
    link: downloadsData.productBrochure.url,
    borderColor: "border-green-200",
    buttonBg: "bg-green-700",
    titleColor: "text-green-800"
  },
  {
    icon: "fa-flask",
    iconColor: "text-green-600",
    title: "MSDS / Lab Report",
    subtitle: "Safety Data Sheet",
    link: downloadsData.msdsLabReport.url,
    borderColor: "border-green-200",
    buttonBg: "bg-green-700",
    titleColor: "text-green-800"
  }
];
---

<BaseLayout
  title={pageSEO.home.title}
  description={pageSEO.home.description}
  keywords={pageSEO.home.keywords}
  activePage="home"
  showWhatsApp={true}
  showSocial={true}
>

  <!-- HERO SECTION -->
  <section id="home" class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden bg-slate-900">
    <div class="absolute inset-0 z-0 opacity-40">
      <Image src="https://images.unsplash.com/photo-1504328345606-18bbc8c9d7d1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80" alt="Industrial Ducting" class="w-full h-full object-cover" width={1920} height={1080} loading="eager" />
    </div>
    <div class="absolute inset-0 bg-gradient-to-r from-brand-navy via-brand-navy/90 to-transparent z-0"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <div class="inline-flex items-center px-3 py-1 rounded-full border border-brand-gold/50 bg-brand-gold/10 text-brand-gold text-xs font-bold uppercase tracking-wide mb-6">
          Global Thinking, Local Execution
        </div>
        <h1 class="text-4xl md:text-6xl font-extrabold text-white tracking-tight leading-tight mb-6">
          Integrated Engineering & <br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-gold to-yellow-200">Environmental Solutions.</span>
        </h1>
        <p class="text-lg text-slate-300 mb-8 leading-relaxed max-w-2xl">
          Specializing in Waste Water Treatment (WWTP), MVAC Systems, and Industrial Fabrication. Serving Batam's manufacturing industries since 2016.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#projects" class="inline-flex justify-center items-center px-8 py-4 text-base font-bold text-brand-navy bg-white hover:bg-slate-100 rounded transition shadow-lg">
            View Project Reference
          </a>
          <a href="#services" class="inline-flex justify-center items-center px-8 py-4 text-base font-bold text-white border border-white/30 hover:bg-white/10 rounded transition">
            Our Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- ABOUT / HISTORY -->
  <section id="about" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-brand-gold font-bold uppercase tracking-widest text-sm mb-2">Who We Are</h2>
          <h3 class="text-3xl font-bold text-brand-navy mb-6">Professional Industrial Partner</h3>
          <p class="text-slate-600 mb-4 leading-relaxed">
            Established in 2016, <strong>PT Toolmate Technologies Indonesia</strong> has grown into a premier General Contractor and M&E Engineering firm in Batam. We are committed to customer satisfaction through legitimate business practices and continuous quality improvement.
          </p>
          <p class="text-slate-600 mb-8 leading-relaxed">
            Our mission is to serve customers with trustworthy business ethics and deliver value across every project, from clean room setups to complex water treatment facilities.
          </p>

          <div class="grid grid-cols-2 gap-6 border-t border-slate-100 pt-6">
            <div>
              <p class="text-3xl font-bold text-brand-navy">8+</p>
              <p class="text-xs text-slate-500 uppercase mt-1">Years Experience</p>
            </div>
            <div>
              <p class="text-3xl font-bold text-brand-navy">50+</p>
              <p class="text-xs text-slate-500 uppercase mt-1">Major Projects</p>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="absolute -top-4 -right-4 w-full h-full border-2 border-brand-gold rounded-lg z-0"></div>
          <Image src="https://images.unsplash.com/photo-1581092335397-9583eb92d232?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" alt="Engineering Team" class="relative z-10 rounded-lg shadow-xl w-full" width={1000} height={667} loading="lazy" />
        </div>
      </div>

      <!-- Why Choose Us -->
      <div class="mt-20 pt-16 border-t border-slate-100">
        <h3 class="text-2xl font-bold text-brand-navy text-center mb-12">Why PT Toolmate Technologies Indonesia?</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
          {whyChooseUs.map((item) => (
            <div class="text-center p-4">
              <div class={`w-12 h-12 ${item.bg} rounded-full flex items-center justify-center mx-auto mb-3`}>
                <i class={`fas ${item.icon} ${item.color}`}></i>
              </div>
              <p class="text-sm font-semibold text-slate-700">{item.text}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CORE SERVICES -->
  <section id="services" class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-brand-navy font-bold uppercase tracking-widest text-sm mb-2">Core Capabilities</h2>
        <h3 class="text-3xl font-bold text-slate-900">Comprehensive Industrial Solutions</h3>
        <p class="text-slate-600 mt-4">M&E • HVAC • Civil Works • Fabrication</p>
      </div>

      <!-- Service Cards Overview -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
        {services.map((service) => (
          <div class={`bg-white p-8 rounded-xl shadow-sm hover:shadow-xl transition border-b-4 ${service.borderColor} group`}>
            <div class={`w-14 h-14 ${service.iconBg} ${service.iconColor} rounded-lg flex items-center justify-center text-2xl mb-6 group-hover:bg-brand-navy group-hover:text-white transition`}>
              <i class={`fas ${service.icon}`}></i>
            </div>
            <h4 class="text-xl font-bold text-slate-900 mb-3">{service.title}</h4>
            <p class="text-slate-600 text-sm leading-relaxed">{service.description}</p>
          </div>
        ))}
      </div>

      <!-- Detailed Services -->
      <div class="space-y-20">
        <!-- HVAC -->
        <div class="flex flex-col md:flex-row gap-12 items-center">
          <div class="md:w-1/2">
            <Image src="https://images.unsplash.com/photo-1581092918056-0c4c3acd3789?auto=format&fit=crop&w=800&q=80" class="rounded-lg shadow-xl border-l-8 border-brand-gold" alt="HVAC" width={800} height={533} loading="lazy" />
          </div>
          <div class="md:w-1/2">
            <div class="w-12 h-12 bg-blue-100 text-brand-navy rounded-lg flex items-center justify-center text-xl mb-4"><i class="fas fa-wind"></i></div>
            <h4 class="text-3xl font-bold text-brand-navy mb-4">HVAC & MVAC Systems</h4>
            <p class="text-slate-600 mb-4">We provide full-spectrum Mechanical Ventilation and Air Conditioning solutions tailored for industrial factories and clean rooms.</p>
            <ul class="space-y-2 text-sm text-slate-700">
              <li><i class="fas fa-check text-brand-gold mr-2"></i> Ducting & Fittings (Fabrication & Install)</li>
              <li><i class="fas fa-check text-brand-gold mr-2"></i> Chiller & Cooling Tower Setup/Servicing</li>
              <li><i class="fas fa-check text-brand-gold mr-2"></i> Exhaust Duct Systems</li>
              <li><i class="fas fa-check text-brand-gold mr-2"></i> Clean Room Systems (SUS/Iron)</li>
            </ul>
          </div>
        </div>

        <!-- WWTP -->
        <div class="flex flex-col md:flex-row-reverse gap-12 items-center">
          <div class="md:w-1/2">
            <Image src="https://images.unsplash.com/photo-1532601224476-15c79f2f7a51?auto=format&fit=crop&w=800&q=80" class="rounded-lg shadow-xl border-r-8 border-green-500" alt="WWTP" width={800} height={533} loading="lazy" />
          </div>
          <div class="md:w-1/2">
            <div class="w-12 h-12 bg-green-100 text-green-600 rounded-lg flex items-center justify-center text-xl mb-4"><i class="fas fa-water"></i></div>
            <h4 class="text-3xl font-bold text-brand-navy mb-4">Environmental Engineering (WWTP)</h4>
            <p class="text-slate-600 mb-4">Specialists in Waste Water Treatment Plant design, expansion, and maintenance using advanced biological technologies.</p>
            <ul class="space-y-2 text-sm text-slate-700">
              <li><i class="fas fa-check text-green-500 mr-2"></i> MBR (Membrane Bioreactor) Systems</li>
              <li><i class="fas fa-check text-green-500 mr-2"></i> MBBR (Moving Bed Biofilm Reactor)</li>
              <li><i class="fas fa-check text-green-500 mr-2"></i> Lamella Clarifiers</li>
              <li><i class="fas fa-check text-green-500 mr-2"></i> STP & WTP Piping Installation</li>
            </ul>
          </div>
        </div>

        <!-- General Contractor -->
        <div class="flex flex-col md:flex-row gap-12 items-center">
          <div class="md:w-1/2">
            <Image src="https://images.unsplash.com/photo-1504307651254-35680f356dfd?auto=format&fit=crop&w=800&q=80" class="rounded-lg shadow-xl border-l-8 border-brand-navy" alt="Construction" width={800} height={533} loading="lazy" />
          </div>
          <div class="md:w-1/2">
            <div class="w-12 h-12 bg-slate-100 text-slate-700 rounded-lg flex items-center justify-center text-xl mb-4"><i class="fas fa-tools"></i></div>
            <h4 class="text-3xl font-bold text-brand-navy mb-4">General Contractor & Fabrication</h4>
            <p class="text-slate-600 mb-4">From civil works to specialized equipment fabrication, we ensure your facility infrastructure is built to last.</p>
            <ul class="space-y-2 text-sm text-slate-700">
              <li><i class="fas fa-check text-brand-navy mr-2"></i> Epoxy Flooring (Industrial Grade)</li>
              <li><i class="fas fa-check text-brand-navy mr-2"></i> Steel Structure & Canopy Works</li>
              <li><i class="fas fa-check text-brand-navy mr-2"></i> Air Compressor & Dryer Setup</li>
              <li><i class="fas fa-check text-brand-navy mr-2"></i> Factory Renovation & M&E Installation</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="text-center mt-12">
        <a href="/services" class="inline-flex items-center px-8 py-4 text-base font-bold text-white bg-brand-navy hover:bg-blue-900 rounded shadow-lg transition">
          View All Services & Downloads
          <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>
    </div>
  </section>

  <!-- BIOLOGY GENESIS PRODUCT SPOTLIGHT -->
  <section id="bio-product" class="py-20 bg-green-900 text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/diagmonds-light.png')]"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="flex flex-col lg:flex-row items-center gap-12 mb-16">
        <div class="lg:w-1/2">
          <div class="inline-block px-4 py-1 bg-green-700 rounded-full text-xs font-bold uppercase tracking-wider mb-4">Naturelabs Biotech</div>
          <h2 class="text-4xl font-bold mb-6">Biology Genesis</h2>
          <p class="text-green-100 text-lg mb-4">Natural Bio Technology Solution for Industrial Waste Water Treatment.</p>
          <p class="text-green-100 mb-8">Biology Genesis is a group of human-friendly and beneficial bacteria & yeast. It is a natural culture without harsh chemical mixtures. It is certified safe, non-toxic, and free of pathogenic bacteria.</p>
          <h3 class="font-bold text-lg mb-3 text-brand-gold">Major Benefits:</h3>
          <ul class="space-y-3 mb-8">
            {benefits.map((benefit) => (
              <li class="flex items-start">
                <i class="fas fa-check-circle text-brand-gold mt-1 mr-3"></i>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>
          <div class="bg-white/10 p-4 rounded-lg border border-white/20">
            <p class="text-sm font-semibold text-brand-gold mb-2">Wide Range of Application:</p>
            <p class="text-sm">Hotels, Restaurants (Grease Trap), Rubber Mills, Palm Oil Mills (POME), Hospitals, Farms, and Municipal Sewage.</p>
          </div>
        </div>
        <div class="lg:w-1/2">
          <div class="bg-white p-2 rounded-lg shadow-2xl rotate-2 hover:rotate-0 transition duration-500">
            <Image src="https://images.unsplash.com/photo-1532601224476-15c79f2f7a51?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Water Treatment Science" class="rounded w-full h-64 object-cover mb-2" width={800} height={533} loading="lazy" />
            <div class="bg-green-50 p-6 rounded">
              <h3 class="text-green-800 font-bold text-xl mb-2">Major Effects</h3>
              <div class="grid grid-cols-2 gap-4 text-sm text-green-900">
                <div>• Palm Oil Mill Effluent</div>
                <div>• Rubber Mill Waste</div>
                <div>• Sewage Treatment</div>
                <div>• Grease Traps</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Dosage Table -->
      <div class="mb-16">
        <h3 class="text-2xl font-bold text-center mb-8">Application Guide & Dosage</h3>
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white text-slate-700 border border-slate-200 text-sm rounded-lg overflow-hidden">
            <thead class="bg-green-800 text-white">
              <tr>
                <th class="py-3 px-4 text-left">Application</th>
                <th class="py-3 px-4 text-left">System</th>
                <th class="py-3 px-4 text-left">Standard Dosage (Maintenance)</th>
                <th class="py-3 px-4 text-left">Initial/Shock Dosing</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200">
              {dosageData.map((row, index) => (
                <tr class={index % 2 === 1 ? "bg-slate-50" : ""}>
                  <td class="py-3 px-4 font-bold">{row.app}</td>
                  <td class="py-3 px-4">{row.system}</td>
                  <td class="py-3 px-4">{row.standard}</td>
                  <td class="py-3 px-4">{row.initial}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        <p class="text-xs text-green-200 mt-2 italic">* Exact dosage may vary based on pH (5-9) and dissolved oxygen levels. Consult our engineers.</p>
      </div>

      <!-- Proven Results -->
      <div>
        <h3 class="text-2xl font-bold text-center mb-10">Proven Results</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {provenResults.map((result) => (
            <div class="bg-white p-4 shadow rounded border border-slate-100 text-slate-700">
              <div class="flex gap-2 mb-4">
                <Image src={result.beforeImg} class="w-1/2 h-40 object-cover grayscale rounded" alt="Before" width={400} height={160} loading="lazy" />
                <Image src={result.afterImg} class="w-1/2 h-40 object-cover rounded" alt="After" width={400} height={160} loading="lazy" />
              </div>
              <h4 class="font-bold text-green-800">{result.title}</h4>
              <p class="text-sm text-slate-600">{result.description}</p>
            </div>
          ))}
        </div>
      </div>

      <div class="text-center mt-12">
        <a href="/products" class="inline-flex items-center px-8 py-4 text-base font-bold text-green-900 bg-white hover:bg-green-50 rounded shadow-lg transition">
          View Full Product Details & Downloads
          <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>
    </div>
  </section>

  <!-- LED BRANDS SECTION -->
  <section id="brands" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-brand-navy font-bold uppercase tracking-widest text-sm mb-2">LED Lighting</h2>
        <h3 class="text-3xl font-bold text-slate-900">Official LED Brand Distributor</h3>
        <p class="text-slate-500 mt-2">Premium LED lighting solutions for residential, commercial, and industrial applications.</p>
      </div>

      <!-- Featured Brand - Prisled -->
      <div class="max-w-4xl mx-auto">
        <a href="/brands/prisled" class="group block">
          <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-2xl p-8 md:p-12 hover:border-brand-navy hover:shadow-xl transition">
            <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
              <div class="w-full md:w-1/3 flex justify-center">
                <div class="bg-white p-6 rounded-xl shadow-sm">
                  <img
                    src="/images/logo/prisled.png"
                    alt="Prisled"
                    class="h-20 md:h-24 object-contain"
                  />
                </div>
              </div>
              <div class="w-full md:w-2/3 text-center md:text-left">
                <div class="inline-block px-3 py-1 bg-brand-gold/10 text-brand-gold text-xs font-bold uppercase tracking-wide rounded-full mb-4">
                  Official Distributor
                </div>
                <h4 class="text-2xl md:text-3xl font-bold text-slate-800 mb-2">Prisled</h4>
