---
import { Image } from 'astro:assets';
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.data.slug },
    props: { project: project.data },
  }));
}

const { project } = Astro.props;

// Get all project images from the public folder
const allImages = import.meta.glob('/public/images/projects/*.*', { eager: true });

// Extract base name from the project image (e.g., "/images/projects/menara-aria-stp-1.png" -> "menara-aria-stp")
const imagePath = project.image;
const imageFileName = imagePath.split('/').pop() || '';
const imageBaseName = imageFileName.replace(/-\d+\.(png|jpg|jpeg|JPG|PNG)$/i, '');

// Find all images that match the base name pattern
const projectImages: string[] = [];
Object.keys(allImages).forEach((path) => {
  const fileName = path.split('/').pop() || '';
  const baseName = fileName.replace(/-\d+\.(png|jpg|jpeg|JPG|PNG)$/i, '');
  if (baseName === imageBaseName) {
    // Convert from /public/images/... to /images/...
    projectImages.push(path.replace('/public', ''));
  }
});

// Sort images by number suffix
projectImages.sort((a, b) => {
  const numA = parseInt(a.match(/-(\d+)\./)?.[1] || '0');
  const numB = parseInt(b.match(/-(\d+)\./)?.[1] || '0');
  return numA - numB;
});

// Get other projects for the related section
const allProjects = await getCollection('projects');
const otherProjects = allProjects
  .map(p => p.data)
  .filter(p => p.slug !== project.slug)
  .slice(0, 3);
---

<BaseLayout title={`${project.title} - ${project.subtitle}`} activePage="projects" flexLayout={true}>

  <!-- HERO -->
  <div class="bg-slate-900 pt-32 pb-16 relative overflow-hidden">
    <div class="absolute inset-0 opacity-30">
      <img
        src={project.image}
        alt=""
        class="w-full h-full object-cover object-center"
        loading="eager"
        decoding="async"
        aria-hidden="true"
      >
    </div>
    <div class="absolute inset-0 bg-gradient-to-r from-slate-900 via-slate-900/95 to-slate-900/80"></div>
    <div class="max-w-7xl mx-auto px-4 relative z-10">
      <a href="/projects" class="inline-flex items-center text-slate-400 hover:text-white mb-6 transition">
        <i class="fas fa-arrow-left mr-2"></i> Back to Projects
      </a>
      <div class="inline-block bg-slate-700 text-white text-xs font-bold px-3 py-1 rounded mb-4">
        {project.badge}
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-2">{project.title}</h1>
      <p class="text-brand-gold font-semibold text-xl">{project.subtitle}</p>
    </div>
  </div>

  <!-- PROJECT CONTENT -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <div class="bg-slate-100 rounded-lg shadow-xl mb-4 flex items-center justify-center overflow-hidden" style="min-height: 300px; max-height: 500px;">
          <img
            id="main-project-image"
            src={project.image}
            alt={project.title}
            width="800"
            height="600"
            class="max-w-full max-h-[500px] w-auto h-auto object-contain cursor-pointer hover:opacity-90 transition"
            loading="eager"
            decoding="async"
            fetchpriority="high"
            onclick="openLightbox(this.src)"
          >
        </div>

        {/* Gallery thumbnails if more than 1 image */}
        {projectImages.length > 1 && (
          <div class="mb-8">
            <div class="grid grid-cols-4 sm:grid-cols-5 md:grid-cols-6 gap-2">
              {projectImages.map((img, index) => (
                <button
                  class={`aspect-[4/3] bg-slate-200 rounded-lg overflow-hidden border-2 transition hover:opacity-80 ${img === project.image ? 'border-brand-gold' : 'border-transparent'}`}
                  onclick={`document.getElementById('main-project-image').src = '${img}'; document.querySelectorAll('.gallery-thumb').forEach(el => el.classList.remove('border-brand-gold')); document.querySelectorAll('.gallery-thumb').forEach(el => el.classList.add('border-transparent')); this.classList.remove('border-transparent'); this.classList.add('border-brand-gold');`}
                >
                  <img
                    src={img}
                    alt={`${project.title} - Image ${index + 1}`}
                    width="150"
                    height="113"
                    class="gallery-thumb w-full h-full object-cover"
                    loading="lazy"
                    decoding="async"
                  />
                </button>
              ))}
            </div>
            <p class="text-sm text-slate-500 mt-2">
              <i class="fas fa-images mr-1"></i> {projectImages.length} photos - Click to view
            </p>
          </div>
        )}

        <h2 class="text-2xl font-bold text-brand-navy mb-4">Project Overview</h2>
        <p class="text-slate-600 leading-relaxed mb-8">{project.fullDescription}</p>

        <h3 class="text-xl font-bold text-brand-navy mb-4">Scope of Work</h3>
        <ul class="space-y-3 mb-8">
          {project.scope.map((item: string) => (
            <li class="flex items-start">
              <i class="fas fa-check-circle text-brand-gold mt-1 mr-3"></i>
              <span class="text-slate-600">{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="bg-slate-50 rounded-lg p-6 sticky top-28">
          <h3 class="text-lg font-bold text-brand-navy mb-6 border-b border-slate-200 pb-3">Project Details</h3>

          <div class="space-y-4">
            <div>
              <p class="text-xs text-slate-500 uppercase tracking-wide mb-1">Client</p>
              <p class="font-semibold text-slate-700">{project.client}</p>
            </div>
            <div>
              <p class="text-xs text-slate-500 uppercase tracking-wide mb-1">Location</p>
              <p class="font-semibold text-slate-700">{project.location}</p>
            </div>
            <div>
              <p class="text-xs text-slate-500 uppercase tracking-wide mb-1">Category</p>
              <span class="inline-block bg-slate-700 text-white text-xs font-bold px-3 py-1 rounded">
                {project.badge}
              </span>
            </div>
          </div>

          <div class="mt-8 pt-6 border-t border-slate-200">
            <p class="text-sm text-slate-600 mb-4">Interested in a similar project?</p>
            <a href="/#contact" class="block w-full text-center bg-brand-navy text-white font-bold py-3 px-4 rounded hover:bg-blue-900 transition">
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- RELATED PROJECTS -->
  <div class="bg-slate-50 py-16 border-t border-slate-200">
    <div class="max-w-7xl mx-auto px-4">
      <h3 class="text-2xl font-bold text-brand-navy mb-8 text-center">Other Projects</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {otherProjects.map((p) => (
          <a href={`/projects/${p.slug}`} class="bg-white rounded-lg shadow-lg overflow-hidden border border-slate-100 hover:-translate-y-1 transition duration-300 block">
            <div class="h-48 bg-slate-200 relative">
              <img
                src={p.image}
                alt={p.title}
                width="400"
                height="300"
                class="w-full h-full object-cover"
                loading="lazy"
                decoding="async"
              >
              <div class="absolute top-3 left-3 bg-slate-700 text-white text-xs font-bold px-2 py-1 rounded">
                {p.badge}
              </div>
            </div>
            <div class="p-4">
              <h4 class="font-bold text-brand-navy">{p.title}</h4>
              <p class="text-sm text-brand-gold font-bold uppercase">{p.subtitle}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>

<!-- Lightbox Modal -->
  <div
    id="lightbox"
    class="fixed inset-0 bg-black/90 z-50 hidden items-center justify-center p-4"
    onclick="closeLightbox()"
  >
    <button
      class="absolute top-4 right-4 text-white text-3xl hover:text-brand-gold transition"
      onclick="closeLightbox()"
    >
      <i class="fas fa-times"></i>
    </button>

    {projectImages.length > 1 && (
      <>
        <button
          id="prev-btn"
          class="absolute left-4 top-1/2 -translate-y-1/2 text-white text-4xl hover:text-brand-gold transition"
          onclick="event.stopPropagation(); navigateLightbox(-1)"
        >
          <i class="fas fa-chevron-left"></i>
        </button>
        <button
          id="next-btn"
          class="absolute right-4 top-1/2 -translate-y-1/2 text-white text-4xl hover:text-brand-gold transition"
          onclick="event.stopPropagation(); navigateLightbox(1)"
        >
          <i class="fas fa-chevron-right"></i>
        </button>
      </>
    )}

    <img
      id="lightbox-image"
      src=""
      alt="Project image"
      class="max-w-[90vw] max-h-[85vh] w-auto h-auto object-contain rounded-lg shadow-2xl"
      decoding="async"
      onclick="event.stopPropagation()"
    >
  </div>

  <script define:vars={{ projectImages }}>
    let currentImageIndex = 0;
    const images = projectImages;

    function openLightbox(src) {
      currentImageIndex = images.indexOf(src);
      if (currentImageIndex === -1) currentImageIndex = 0;
      document.getElementById('lightbox-image').src = src;
      document.getElementById('lightbox').classList.remove('hidden');
      document.getElementById('lightbox').classList.add('flex');
      document.body.style.overflow = 'hidden';
    }

    function closeLightbox() {
      document.getElementById('lightbox').classList.add('hidden');
      document.getElementById('lightbox').classList.remove('flex');
      document.body.style.overflow = '';
    }

    function navigateLightbox(direction) {
      currentImageIndex += direction;
      if (currentImageIndex < 0) currentImageIndex = images.length - 1;
      if (currentImageIndex >= images.length) currentImageIndex = 0;

      const newSrc = images[currentImageIndex];
      document.getElementById('lightbox-image').src = newSrc;
      document.getElementById('main-project-image').src = newSrc;

      // Update thumbnail border
      document.querySelectorAll('.gallery-thumb').forEach((el, idx) => {
        el.parentElement.classList.remove('border-brand-gold');
        el.parentElement.classList.add('border-transparent');
        if (idx === currentImageIndex) {
          el.parentElement.classList.add('border-brand-gold');
          el.parentElement.classList.remove('border-transparent');
        }
      });
    }

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      const lightbox = document.getElementById('lightbox');
      if (!lightbox.classList.contains('hidden')) {
        if (e.key === 'Escape') closeLightbox();
        if (e.key === 'ArrowLeft') navigateLightbox(-1);
        if (e.key === 'ArrowRight') navigateLightbox(1);
      }
    });

    // Make functions globally available
    window.openLightbox = openLightbox;
    window.closeLightbox = closeLightbox;
    window.navigateLightbox = navigateLightbox;
  </script>

</BaseLayout>
